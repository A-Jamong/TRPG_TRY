<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <!-- ID -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal"
        android:translationX="20dp"
        android:translationY="152dp" />
    <!-- 아이디 입력 상자 -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:translationY="170dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:hint="아이디 입력"></android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <!-- 비밀번호 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="비밀번호"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal"
        android:translationX="20dp"
        android:translationY="238dp" />
    <!-- 비밀번호 입력 상자 -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:translationY="256dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:hint="비밀번호 입력"></android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <!--로그인 버튼-->
    <Button
        android:id="@+id/loginbt"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:background="@drawable/box_round_rectangular"
        android:text="로그인"
        android:textSize="12sp"
        android:translationX="210dp"
        android:translationY="338dp"
        />
    <!--회원가입 버튼-->
    <Button
        android:id="@+id/signupbt"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:background="@drawable/box_round_rectangular"
        android:text="회원가입"
        android:textSize="12sp"
        android:translationX="290dp"
        android:translationY="338dp"
        />


</RelativeLayout>